<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Edit</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with(model: @products, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :price %>
        <%= form.text_field :price, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :image_url %>
        <%= form.text_field :image_url, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :quantity %>
        <%= form.text_field :quantity, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :category_id %>
        <%= form.text_field :category_id, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :store_id %>
        <%= form.text_area :store_id, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>